{
  "version": "0.2.0",
  "configurations": [
     {
        "name": "Python Debugger: Remote Attach",
        "type": "debugpy",
        "request": "attach",
        "port": 5678,
        "host": "localhost",
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/backend", 
            "remoteRoot": "/app/backend" 
          }
        ],
        "justMyCode": false
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Python: Current File",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "type": "debugpy",
      "request": "launch",
      "name": "Python: Select Script",
      "program": "${workspaceFolder}/${input:scriptName}",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "scriptName",
      "type": "promptString",
      "description": "Enter the path to the Python script relative to the workspace folder (e.g., backend/backend_main.py)"
    }
  ]
}
